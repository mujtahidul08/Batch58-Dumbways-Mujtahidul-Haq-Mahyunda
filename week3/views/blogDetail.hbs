<body style="background-color: #f0f0f0;">
<nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid" style="font-size: 20px;">
          <a class="navbar-brand" href="#">
            <img src="https://ewr1.vultrobjects.com/lmsbzzbx/attachment/y1jqofqjr8tcbcask.png" alt="Logo" style="height: 45px; width: 45px;">
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 column-gap-4">
              <li class="nav-item">
                <a class="nav-link fw-semibold" href="/">Home</a>
              </li>
              {{#if user}}
              <li class="nav-item">
                <a class="nav-link fw-semibold " href="/blog">Add Project</a>
              </li>
              {{/if}} 
              <li class="nav-item">
                <a class="nav-link fw-semibold" href="/testimonial">Testimonials</a>
              </li>
            </ul>
            
            <!-- Login and Register Links -->
            <ul class="navbar-nav mb-2 mb-lg-0 d-flex align-items-center column-gap-3">
             {{#if user}}
                <li class="nav-item">
                  <a class="nav-link fw-semibold" href="/testimonial">welcome, {{user.name}}</a>
                </li>
                <form action="/logout" method="post">
                  <button class="btn btn-dark fw-semibold ms-3" type="submit" style="font-size: 20px;">
                        Log Out
                    </button>
                </form>
                {{else}}
                <li class="nav-item">
                    <a class="nav-link fw-semibold" href="/login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link fw-semibold" href="/register">Register</a>
                </li>
                {{/if}}
                <!-- Contact Button -->
                <li class="nav-item">
                    <button class="btn btn-dark fw-semibold ms-3" type="button" style="font-size: 20px;" onclick="window.location.href='/contact';">
                        Contact Me
                    </button>
                </li>
            </ul>
          </div>
        </div>
    </nav>



<div class="card" style="margin: 40px 40px; padding: 40px; box-shadow: 1px 3px 20px 1px gray; ">
  <h1 class="h1 fw-bolder fs-1" style="text-align: center;">{{blog.title}}</h1>
  <div class="deskripsi card-flex d-flex justify-content-around">
    <div class="image">
      <img src="{{blog.image}}" alt="">
    </div>
    <div class="keterangan">
      <h3>Durasi</h3>
      <div class="durasi">
        <p><i class="fa-solid fa-calendar-days"></i> {{get_full_time blog.createdAt}}</p>
        <p><i class="fa-solid fa-clock"></i> {{get_duration blog.startDate blog.endDate}}</p>
          <p><i class="fa-solid fa-calendar-days"></i> {{blog.name}}</p>
      </div>
      <h3>Technologies</h3>
      <div class="teknologi">
      {{#each blog.technologies}}
       {{#if (eq this "nodejs")}}<i class="fa-brands fa-node"></i>{{/if}}
        {{#if (eq this "reactjs")}}<i class="fa-brands fa-react"></i>{{/if}}
        {{#if (eq this "nextjs")}}<i class="fa-brands fa-vuejs"></i>{{/if}}
        {{#if (eq this "typescript")}}<i class="fa-brands fa-js"></i>{{/if}}
      {{/each}} 
      </div>
    </div>
  </div>
  <p class="p">{{blog.content}}</p>
</div>


